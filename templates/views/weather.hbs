<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
    <script src="https://kit.fontawesome.com/906e7028b4.js" crossorigin="anonymous"></script>
    <title>Weather Website</title>
</head>

<body>
    <navbar id="navbar">
        <a href="/">Home</a>
        <h1><span id="span1">Wea</span><span id="span2">thr</span></h1>
        <a href="/weather" class="active">Weather</a>
    </navbar>

    <div id="temp-container">
        <form id="city-serach">
            <input type="text" id="city-name" placeholder="Enter city" autocomplete="off">
            <input type="submit" value="Search" id="submit-btn">
        </form>
        <div id="day">Monday | 10 March, 2021</div>
        <div id="city-country">
            <i class="fas fa-map-marker-alt"></i><span id="city">City name will appear here</span>
        </div>
        <div id="temp-status"><i class="fas fa-cloud"></i></div>
        <div id="temp_status_name">None</div>
        <div id="temp"><span id="temp-val">0</span><sup>o</sup>C</div>
        <div id="min-max-temp">
            Min: 0<sup>o</sup>C | Max: 0<sup>o</sup>C
        </div>
        <div id="additional-info">

            <div id="humidity">
                <i class="fas fa-thermometer-empty"></i>
                <div>
                    <p>Humidity</p>
                    <p id="humidity-val">0%</p>
                </div>
            </div>
            <div id="visibility">
                <i class="far fa-eye-slash"></i>
                <div>
                    <p>Visibility</p>
                    <p id="vis-val">0 km</p>
                </div>
            </div>
        </div>
    </div>
    </div>
    {{>footer}}

    <script>
        let day = document.getElementById("day");
        let date_year = document.getElementById("date-year");

        let date_time = new Date();

        let day_arr = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];

        let month_arr = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];

        let hour = date_time.getHours();
        let min = date_time.getMinutes();
        let period = "AM";

        if (hour > 11) {
            period = "PM";
        }
        if (hour > 12) {
            hour -= 12;
        }
        if (hour < 10) {
            hour = "0" + hour;
        }
        if (min < 10) {
            min = "0" + min;
        }
        day.innerHTML = `${day_arr[date_time.getDay()]} | ${date_time.getDate()} ${month_arr[date_time.getMonth()]}, ${date_time.getFullYear()} | ${hour}:${min} ${period}`;

    </script>
    <script src="js/main.js"></script>
</body>

</html>